<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            android:id="@+id/add_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Add a new exercise"
            android:fontFamily="@font/markazi_text_semibold"
            android:textSize="28sp"
            android:textAlignment="center"
            android:lineSpacingMultiplier="0.9" />

        <EditText
            android:id="@+id/exercise_name_edit_text"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/markazi_text_regular"
            android:lineSpacingMultiplier="0.9"
            android:background="@drawable/bg_rounded_rectangle"
            android:hint="Enter a name"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/exercise_description_edit_text"
            android:layout_width="210dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/markazi_text_regular"
            android:lineSpacingMultiplier="0.9"
            android:background="@drawable/bg_rounded_rectangle"
            android:hint="Enter a description"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/markazi_text_medium"
                android:lineSpacingMultiplier="0.9"
                android:gravity="center"
                android:text="Repetitions"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="9dp"
                android:fontFamily="@font/markazi_text_medium"
                android:lineSpacingMultiplier="0.9"
                android:gravity="center"
                android:text="Cycles"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/markazi_text_medium"
                android:lineSpacingMultiplier="0.9"
                android:gravity="center"
                android:text="Time per repetition"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/exercise_repetitions_edit_text"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/markazi_text_regular"
            android:lineSpacingMultiplier="0.9"
            android:inputType="number"
            android:background="@drawable/bg_rounded_rectangle"
            android:textSize="20sp" />

            <EditText
                android:id="@+id/exercise_cycles_edit_text"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/markazi_text_regular"
                android:lineSpacingMultiplier="0.9"
                android:inputType="number"
                android:background="@drawable/bg_rounded_rectangle"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/exercise_repetition_time_edit_text"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:fontFamily="@font/markazi_text_regular"
                android:lineSpacingMultiplier="0.9"
                android:inputType="number"
                android:background="@drawable/bg_rounded_rectangle"
                android:textSize="20sp" />
    </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="Submit" />

    </LinearLayout>
</LinearLayout>