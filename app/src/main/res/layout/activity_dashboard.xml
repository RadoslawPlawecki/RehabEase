<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <Button
        android:id="@+id/treatment_details"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/dashboard_button"
        android:backgroundTint="@color/treatmentDetails"
        app:layout_constraintBottom_toTopOf="@+id/adjust_exercise"
        app:layout_constraintEnd_toStartOf="@+id/your_activity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/your_activity"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/dashboard_button"
        android:backgroundTint="@color/yourActivity"
        app:layout_constraintBottom_toTopOf="@+id/training_evaluation"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/adjust_exercise"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/dashboard_button"
        android:backgroundTint="@color/adjustExercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/training_evaluation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/training_evaluation"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/dashboard_button"
        android:backgroundTint="@color/trainingEvaluation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/rectimage"
        android:layout_width="409dp"
        android:layout_height="125dp"
        android:src="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/markazi_text_bold"
        android:text="Hello XYZ!"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>