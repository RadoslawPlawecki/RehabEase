<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/defaultButton</item>
        <item name="editTextStyle">@style/defaultEditText</item>
        <item name="android:textViewStyle">@style/defaultTextView</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/markazi_text_bold</item>
    </style>

    <style name="defaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/simpleTextColor</item>
        <item name="android:fontFamily">@font/markazi_text_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="defaultEditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/bg_rounded_corner</item>
        <item name="fontFamily">@font/markazi_text_bold</item>
        <item name="android:textColorHint">@color/textEditColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#EFEFEF</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Theme.RehabEase" parent="android:Theme.Material.Dialog.NoActionBar" />
</resources>